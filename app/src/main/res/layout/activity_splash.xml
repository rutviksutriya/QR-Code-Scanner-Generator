<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/bg_splash"
    tools:context=".activity.SplashActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">


        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_150sdp"
            android:layout_gravity="center"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/splash" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/librefranklin_semibold"
            android:gravity="center_horizontal"
            android:text="QR Code"
            android:includeFontPadding="false"
            android:textColor="@color/white"
            android:textSize="@dimen/_24ssp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/librefranklin_semibold"
            android:gravity="center_horizontal"
            android:includeFontPadding="false"
            android:layout_marginTop="@dimen/_2sdp"
            android:text="Scanner &amp; Generator"
            android:textColor="@color/white"
            android:textSize="@dimen/_16ssp" />
    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This action may contain ads"
        android:textColor="@color/white"
        android:layout_marginBottom="@dimen/_5sdp"
        android:fontFamily="@font/librefranklin_regular"
        android:layout_above="@id/ll"
        android:textSize="@dimen/_14ssp"
        android:gravity="center"/>
    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_52sdp"
        android:gravity="bottom"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <include
            android:id="@+id/llPattiMoneyView"
            layout="@layout/money_patti"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible" />


    </LinearLayout>



</RelativeLayout>