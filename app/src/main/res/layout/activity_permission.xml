<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/bg_splash"
    tools:context=".activity.PermissionActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">



        <ImageView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_camera"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:fontFamily="@font/librefranklin_bold"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="All Camera Access"
            android:textColor="@color/white"
            android:textSize="@dimen/_16ssp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/librefranklin_regular"
            android:gravity="center"
            android:layout_marginHorizontal="@dimen/_25sdp"
            android:includeFontPadding="false"
            android:text="We only use the camera for scanning, your information will be protect during usage."
            android:textColor="#B6B6B6"
            android:textSize="@dimen/_14ssp" />



        <TextView
            android:id="@+id/tvAllow"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:includeFontPadding="false"

            android:background="@drawable/btn_orange_b"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:fontFamily="@font/librefranklin_bold"
            android:gravity="center"
            android:layout_marginTop="@dimen/_20sdp"
            android:text="Allow"
            android:textColor="@color/white"
            android:textSize="@dimen/_16ssp" />
        />
    </LinearLayout>

</RelativeLayout>