<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".activity.ShareDataActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">


        <include
            android:id="@+id/toolBarView"
            layout="@layout/tool_bar" />


        <androidx.cardview.widget.CardView
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/_5sdp"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_gravity="center_horizontal"
            app:cardBackgroundColor="#1A0B0E21"
            app:cardCornerRadius="@dimen/_8sdp"
            app:cardElevation="@dimen/_2sdp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="0dp"
            android:layout_margin="1dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/_7sdp">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10sdp"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvTitleView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="757783"
                        android:layout_gravity="center_vertical"
                        android:textColor="#757783"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:layout_weight="1"
                        android:textSize="@dimen/_12ssp"
                        android:fontFamily="@font/librefranklin_medium"/>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/ivWebsite"

                            android:layout_width="@dimen/_22sdp"
                            android:layout_height="@dimen/_22sdp"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:src="@drawable/ic_qr_website"/>
                        <ImageView
                            android:id="@+id/ivCopy"

                            android:layout_width="@dimen/_22sdp"
                            android:layout_height="@dimen/_22sdp"
                            android:layout_marginHorizontal="@dimen/_10sdp"
                            android:src="@drawable/ic_copy"/>
                        <ImageView
                            android:id="@+id/ivShare"

                            android:layout_width="@dimen/_22sdp"
                            android:layout_height="@dimen/_22sdp"
                            android:src="@drawable/ic_qr_share"/>

                    </LinearLayout>

                </LinearLayout>


                <TextView
                    android:id="@+id/tvResult"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Alexandra Christopher"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/black"

                    android:textSize="@dimen/_14ssp"
                    android:fontFamily="@font/librefranklin_semibold"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <include
        android:id="@+id/llVachaliMoneyView"
        layout="@layout/money_custom_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_3sdp"
        android:layout_marginTop="@dimen/_5sdp" />

</LinearLayout>