<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity.CalendarActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/ll"
        android:orientation="vertical">


        <include
            android:id="@+id/toolBarView"
            layout="@layout/tool_bar" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <EditText
            android:id="@+id/editText1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:background="@drawable/bg_option"
            android:fontFamily="@font/librefranklin_medium"
            android:hint="Enter company"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:inputType="text"
            android:paddingStart="@dimen/_10sdp"
            android:textColor="@color/black"
            android:imeOptions="actionNext"
            android:textColorHint="@color/hint_color"
            android:textSize="@dimen/_14ssp" />

        <EditText
            android:id="@+id/editText2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:background="@drawable/bg_option"
            android:fontFamily="@font/librefranklin_medium"
            android:hint="Enter location"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:inputType="text"
            android:paddingStart="@dimen/_10sdp"
            android:textColor="@color/black"
            android:imeOptions="actionNext"
            android:textColorHint="@color/hint_color"
            android:textSize="@dimen/_14ssp" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:background="@drawable/bg_option">
            <TextView
                android:id="@+id/tvStartDate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textSize="@dimen/_14ssp"
                android:layout_toStartOf="@id/iv1"
                tools:text="@string/app_name"
                android:fontFamily="@font/librefranklin_medium"
                android:textColor="@color/black"
                android:paddingStart="@dimen/_15sdp"
                android:textColorHint="@color/hint_color"/>

            <ImageView
                android:id="@+id/iv1"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/ic_down"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                app:tint="@color/hint_color" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:background="@drawable/bg_option">
            <TextView
                android:id="@+id/tvEndDate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textSize="@dimen/_14ssp"
                android:layout_toStartOf="@id/iv2"
                tools:text="@string/app_name"
                android:fontFamily="@font/librefranklin_medium"
                android:textColor="@color/black"
                android:paddingStart="@dimen/_15sdp"
                android:textColorHint="@color/hint_color"/>

            <ImageView
                android:id="@+id/iv2"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/ic_down"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                app:tint="@color/hint_color" />

        </RelativeLayout>


        <EditText
            android:id="@+id/editText3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_80sdp"
            android:background="@drawable/bg_option"
            android:gravity="start"
            android:paddingTop="@dimen/_10sdp"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:textSize="@dimen/_14ssp"
            android:layout_marginTop="@dimen/_10sdp"
            android:inputType="textMultiLine"
            android:imeOptions="actionDone"
            android:fontFamily="@font/librefranklin_medium"
            android:textColor="@color/black"
            android:paddingHorizontal="@dimen/_15sdp"
            android:textColorHint="@color/hint_color"
            android:hint="Enter description"/>

    </LinearLayout>
    </ScrollView>




    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <include
            android:id="@+id/llVachaliMoneyView"
            layout="@layout/money_custom_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp" />
        <TextView
            android:id="@+id/tvGeneratedCode"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:includeFontPadding="false"
            android:layout_alignParentBottom="true"
            android:background="@drawable/btn_orange"
            android:layout_margin="@dimen/_10sdp"
            android:fontFamily="@font/librefranklin_bold"
            android:gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="Generate Code"
            android:textColor="@color/white"
            android:textSize="@dimen/_16ssp" />
        />


    </LinearLayout>


</RelativeLayout>