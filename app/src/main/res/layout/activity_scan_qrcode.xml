<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".activity.ScanQRCodeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical">

        <include
            android:id="@+id/toolBarView"
            layout="@layout/tool_bar" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.budiyev.android.codescanner.CodeScannerView
                    android:id="@+id/scannerView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:flashButtonColor="@color/orange"
                    app:autoFocusButtonColor="@color/orange"
                    app:frameCornersRadius="@dimen/_20sdp"
                    app:flashButtonOffIcon="@drawable/ic_focus_off"
                    app:flashButtonOnIcon="@drawable/ic_focus_on"

                    app:frameColor="@color/orange"/>
            </FrameLayout>


            <include
                android:id="@+id/llPattiMoneyView"
                layout="@layout/money_patti"
                android:layout_width="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_height="wrap_content"
                android:visibility="visible" />

        </RelativeLayout>


    </LinearLayout>
</RelativeLayout>