<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lLayoutUserDialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000"

    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_15sdp"
        android:background="@drawable/bg_update">



        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/bg_update_lines"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">



            <ImageView
                android:id="@+id/iViewUserImage"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_100sdp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginVertical="@dimen/_20sdp"
                android:src="@mipmap/ic_launcher" />


            <TextView
                android:id="@+id/tViewTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/librefranklin_semibold"
                android:includeFontPadding="false"
                android:text="Update the app"
                android:textColor="@color/black"
                android:textSize="@dimen/_20ssp" />


            <TextView
                android:id="@+id/tViewDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/librefranklin_medium"
                android:gravity="center"
                android:lineSpacingMultiplier="1.2"
                android:text="An Update For The Application Is Available"
                android:textColor="#757783"
                android:textSize="@dimen/_14ssp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="@dimen/_20sdp"
                android:gravity="center_vertical"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_15sdp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvCancel"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_45sdp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_gray_s"
                    android:fontFamily="@font/librefranklin_bold"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:text="Cancel"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_16ssp" />

                <View
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="@dimen/_1sdp" />

                <TextView
                    android:id="@+id/tViewDownload"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_45sdp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_orange_s"
                    android:fontFamily="@font/librefranklin_bold"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:text="@string/ok"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_16ssp" />

            </LinearLayout>



        </LinearLayout>



    </RelativeLayout>



</LinearLayout>