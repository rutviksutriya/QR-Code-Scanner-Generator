<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".activity.OneTextFieldActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/ll"

        android:orientation="vertical">

        <include
            android:id="@+id/toolBarView"
            layout="@layout/tool_bar" />


        <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:layout_marginTop="@dimen/_5sdp"

            android:layout_marginHorizontal="@dimen/_10sdp"
            android:background="@drawable/bg_option"
            android:fontFamily="@font/librefranklin_medium"
            android:hint="Please enter text"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:paddingHorizontal="@dimen/_10sdp"
            android:textColor="@color/black"
            android:textColorHint="@color/hint_color"
            android:textSize="@dimen/_14ssp" />


        <LinearLayout
            android:visibility="gone"
            android:id="@+id/llSpinner"
            tools:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:orientation="horizontal"
            android:layout_marginHorizontal="@dimen/_10sdp"

            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/bg_option"
            android:paddingHorizontal="@dimen/_7sdp">


            <Spinner
                android:id="@+id/spCountry"
                android:layout_width="@dimen/_95sdp"
                android:layout_height="match_parent"
                android:theme="@style/Spinner"

                android:backgroundTint="@color/orange"
                android:dropDownWidth="@dimen/_210sdp"
                android:gravity="start|center"/>


            <View
                android:layout_width="@dimen/_1sdp"
                android:layout_height="match_parent"
                android:background="#C3CEE8"
                android:layout_marginVertical="@dimen/_10sdp"/>

            <EditText
                android:id="@+id/editText2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="phone"
                android:imeOptions="actionDone"
                android:fontFamily="@font/librefranklin_medium"
                android:textColor="@color/black"
                android:background="@null"
                android:hint="Enter phone number"
                android:textSize="@dimen/_14ssp"
                android:gravity="start|center"
                android:singleLine="false"
                android:digits="0123456789"
                android:maxLength="16"
                android:includeFontPadding="false"
                android:layout_gravity="center_vertical"
                android:paddingHorizontal="@dimen/_8sdp"/>

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <include
            android:id="@+id/llMotiMoneyView"
            layout="@layout/money_custom_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp" />

        <TextView
            android:id="@+id/tvGeneratedCode"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/btn_orange_b"
            android:fontFamily="@font/librefranklin_bold"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="Generate Code"
            android:textColor="@color/white"
            android:textSize="@dimen/_16ssp" />
        />


    </LinearLayout>


</RelativeLayout>